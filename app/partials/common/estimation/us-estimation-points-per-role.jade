ul.points-per-role
    li.total
        span.points <%- totalPoints %>
        span.role total
    <% _.each(roles, function(role) { %>
    li(class!="total <% if(editable){ %>clickable<% } %>", data-role-id!="<%- role.id %>")
        span.points <%- role.points %>
        span.role <%- role.name %>
    <% }); %>
