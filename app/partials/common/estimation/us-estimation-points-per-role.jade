ul.points-per-role
    li.total
        span.points <%- totalPoints %>
        span.role(translate="US.TOTAL_POINTS")
    <% _.each(roles, function(role) { %>
    li(class!="total <% if(editable){ %>clickable<% } %>", data-role-id!="<%- role.id %>", title!="<%- role.name %>")
        span.points <%- role.points %>
        span.role <%- role.name %>
    <% }); %>
